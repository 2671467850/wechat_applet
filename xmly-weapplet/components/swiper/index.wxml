<view class="swiper-main">
  <swiper
    class="swiper"
    indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}"
    interval="{{interval}}"
    duration="{{duration}}"
  >
    <swiper-item
      class="swiper-item"
      wx:for="{{swiperList}}"
      wx:key="index"
    >
      <image class="swiper-img" src="{{item.coverPath}}"></image>
    </swiper-item>
  </swiper>
</view>
