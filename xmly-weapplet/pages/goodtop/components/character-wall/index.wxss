.character-view{
  margin: 0 20rpx;
}

.character-view-name{
  margin: 10rpx 0;
  font-size: 36rpx;
}

.character-swiper-cont{
  width: 100%;
  padding: 10rpx 0;
  white-space: nowrap;
}

.character-swiper-box{
  display: inline-block;
  width: 180rpx;
  height: 270rpx;
  margin-right: 30rpx;
  /* background: orange; */
}

.character-swiper-img{
  width: 100%;
}

.character-swiper-img-url{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  vertical-align: top;
}

.character-word{
  font-size: 12px;
  padding: 0 5rpx;
}

.character-name{
  text-align: center;
}

.character-info{
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
}