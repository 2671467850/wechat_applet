.search-view{
  padding: 0 20rpx;
}
.v-input{
  display: flex;
  border: 1rpx solid #eee;
  height: 60rpx;
  border-radius: 25rpx;
  align-items: center;
  padding-left: 15rpx;
  background: #f5f5f5;
}

.search-img{
  width: 35rpx;
  height: 35rpx;
}

.search-input{
  margin-left: 20rpx;
  height: 60rpx;
  font-size: 25rpx;
  width: 100%;
}


.search-history{
  padding: 20rpx;
}

.search-view-name{
  font-size: 14px;
}

.search-history-box{
  display: flex;
  /* padding: 20rpx 0; */
  flex-wrap: wrap;
}

.search-history-item{
  font-size: 12px;
  padding: 10rpx 30rpx;
  background-color: #eee;
  border-radius: 30rpx;
  margin: 20rpx 30rpx 0 0;
}

.search-top-box{
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.search-top-item{
  width: 50%;
  margin: 20rpx 0;
}

.search-top-item-index{
  color: #999;
  margin-right: 20rpx;
}

.search-top-item-title{
  font-size: 14px;
}