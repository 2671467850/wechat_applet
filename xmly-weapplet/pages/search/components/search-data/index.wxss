.for-you-name{
  margin-top: 25rpx;
  font-size: 38rpx;
}

.for-you-item{
  display: flex;
  padding: 30rpx 0;
  border-bottom: solid 1px #eee;
}

.for-you-img{
  width: 25%;
  height: 25vw;
  margin-right: 20rpx;
}

.item-img{
  width: 100%;
  height: 100%;
  vertical-align: top;
  border-radius: 10%;
}

.for-you-word{
  width: 75%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.for-you-title{
  font-size: 35rpx;
}